<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="self.xhl.com.commonproject.fragmentlazyload.LazyloadMainActivity">

    <include layout="@layout/custom_toolbar"
        android:id="@+id/toolbar"
        />
    <com.ruffian.library.widget.RTextView
        android:id="@+id/txt1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Add模式:Fragment懒加载"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_margin="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"

        app:corner_radius="25dp"
        app:background_normal="@color/g_default_accent"
        app:background_pressed="@color/blue"
        app:border_color_normal="@color/bar_grey"
        app:border_color_pressed="@color/g_default_base_accentDark"
        app:border_width_normal="2dp"
        app:text_color_normal="@color/black"
        app:text_color_pressed="@color/white"
        />
    <com.ruffian.library.widget.RTextView
        android:id="@+id/txt2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="ViewPage模式:Fragment懒加载"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"

        app:corner_radius="25dp"
        app:background_normal="@color/g_default_accent"
        app:background_pressed="@color/blue"
        app:border_color_normal="@color/bar_grey"
        app:border_color_pressed="@color/g_default_base_accentDark"
        app:border_width_normal="2dp"
        app:text_color_normal="@color/black"
        app:text_color_pressed="@color/white"
        />

</android.support.constraint.ConstraintLayout>
